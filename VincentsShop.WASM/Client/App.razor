<CascadingAuthenticationState>
<Router AppAssembly="@typeof(Program).Assembly">
    <Found Context="routeData">
        <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
            <NotAuthorized>
                <h1>Accès refusé</h1>
                <p>Seulement les usagers authentifié ont accès à cette page</p>
            </NotAuthorized>
            <Authorizing>
                Attente...
            </Authorizing>
        </AuthorizeRouteView>
    </Found>
    <NotFound>
        <LayoutView Layout="@typeof(MainLayout)">
            <p>Désolé cette adresse n'est pas disponible</p>
        </LayoutView>
    </NotFound>
</Router>
</CascadingAuthenticationState>
